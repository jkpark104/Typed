{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "moduleResolution": "node",
    "paths": { "*": ["*", "src/*"] },
    "strict": true
  },
  "include": ["src/**/*"]
}
